<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <com.unicorn.csp.other.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_widthPercent="35%" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="刑事诉讼法2013"
                    android:maxLines="3"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:ellipsize="end"
                    android:textColor="@android:color/black" />

                <com.malinskiy.materialicons.widget.IconTextView
                    android:id="@+id/more_action"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="{zmdi-more-vert}"
                    android:textColor="?attr/colorAccent"
                    android:textSize="24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="苏菲也差不多是你这个年纪  在奇妙的下午被一个神秘的人引导她认识了欧洲哲学的发展苏菲也差不多是你这个年纪  在奇妙的下午被一个神秘的人引导她认识了欧洲哲学的发展苏菲也差不多是你这个年纪  在奇妙的下午被一个神秘的人引导她认识了欧洲哲学的发展"
                android:textColor="#888" />

        </LinearLayout>

    </com.unicorn.csp.other.PercentLinearLayout>

</android.support.v7.widget.CardView>